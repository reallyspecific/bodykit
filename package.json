{
  "name": "@reallyspecific/bodykit",
  "version": "1.3.5",
  "main": "main.js",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "bin": {
    "bodykit": "main.js"
  },
  "exports": {
    ".": "./util/compiler.js"
  },
  "scripts": {
    "test:build": "node main.js --build=all --in=test-assets/in --out=test-assets/out",
    "test:fonts": "node main.js --build=fonts --in=test-assets/in --out=test-assets/out",
    "test:watch": "node main.js --watch --in=test-assets/in",
    "test:server": "node main.js --watch --serve=test-assets/out --in=test-assets/in --out=test-assets/out"
  },
  "dependencies": {
    "@node-minify/core": "^9.0.2",
    "@node-minify/html-minifier": "^9.0.1",
    "attributes-parser": "^2.2.3",
    "browserslist": "^4.23.0",
    "esbuild": "^0.25.0",
    "express": "^4.18.3",
    "lightningcss": "^1.30.1",
    "markdown-it": "^14.1.0",
    "php-date": "^4.0.1",
    "readline": "^1.3.0",
    "socket.io": "^4.7.5",
    "string-strip-html": "^13.4.6"
  },
  "description": "A small, fast CLI for building web assets without a ton of overhead or frameworks.",
  "devDependencies": {
    "@reallyspecific/bodykit-fonts": "^1.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reallyspecific/bodykit.git"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/reallyspecific/bodykit/issues"
  },
  "homepage": "https://github.com/reallyspecific/bodykit#readme",
  "config": {
    "bodykit": {
      "font": {
        "embedded": "assets/css/fonts.css"
      }
    }
  }
}
