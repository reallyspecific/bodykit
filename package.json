    "express": "^4.18.3",
    "glob": "^11.0.3",
    "lightningcss": "^1.30.1",
    "markdown-it": "^14.1.0",
    "minimatch": "^10.0.3",
    "php-date": "^4.0.1",
    "readline": "^1.3.0",
    "segfault-handler": "^1.3.0",
    "socket.io": "^4.7.5",
    "string-strip-html": "^13.4.6"
